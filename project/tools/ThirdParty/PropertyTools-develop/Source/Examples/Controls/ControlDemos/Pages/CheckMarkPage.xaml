<Page x:Class="ControlDemos.CheckMarkPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:p="clr-namespace:PropertyTools.Wpf;assembly=PropertyTools.Wpf" mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
	Title="CheckMark Demo">

    <StackPanel Width="250" VerticalAlignment="Center">
        <GroupBox Header="Normal CheckBox">
            <CheckBox Name="checkBox" Margin="4" HorizontalAlignment="Center" />
        </GroupBox>
        <GroupBox Header="CheckMark (readonly)">
            <p:CheckMark IsChecked="{Binding IsChecked, ElementName=checkBox}" HorizontalAlignment="Center" Margin="4"/>
        </GroupBox>
    </StackPanel>

</Page>
