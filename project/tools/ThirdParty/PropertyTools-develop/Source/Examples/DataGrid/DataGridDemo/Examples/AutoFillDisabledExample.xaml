<Window x:Class="DataGridDemo.AutoFillDisabledExample"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:p="clr-namespace:PropertyTools.Wpf;assembly=PropertyTools.Wpf"
        xmlns:dataGridDemo="clr-namespace:DataGridDemo"
        Title="Auto fill disabled" Height="450" Width="900">
    <Window.DataContext>
        <dataGridDemo:ExampleViewModel/>
    </Window.DataContext>
    <Grid>
        <p:DataGrid ItemsSource="{Binding ItemsSource}" IsAutoFillEnabled="False"/>
    </Grid>
</Window>
