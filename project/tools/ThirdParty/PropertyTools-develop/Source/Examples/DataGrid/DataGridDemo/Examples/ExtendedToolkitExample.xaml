<Window x:Class="DataGridDemo.ExtendedToolkitExample"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:p="clr-namespace:PropertyTools.Wpf;assembly=PropertyTools.Wpf"
        xmlns:ptext="http://propertytools.org/wpf/extended"
        Title="Extended Toolkit controls" Height="450" Width="900">
    <Grid>
        <p:DataGrid ItemsSource="{Binding Items}">            
            <p:DataGrid.ControlFactory>
                <ptext:ExtendedToolkitDataGridControlFactory />
            </p:DataGrid.ControlFactory>
        </p:DataGrid>
    </Grid>
</Window>
