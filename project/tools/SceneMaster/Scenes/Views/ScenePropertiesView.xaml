<UserControl x:Class="SceneMaster.Scenes.Views.ScenePropertiesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:pt="http://propertytools.org/wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <GroupBox Header="Foreground">
                <pt:PropertyGrid SelectedObject="{Binding ForegroundTiledMap}"
                                    CategoryControlType="None"
                                    TabVisibility="Collapsed" />
                
            </GroupBox>
            <GroupBox Header="Background">
                <pt:PropertyGrid SelectedObject="{Binding BackgroundTiledMap}"
                                CategoryControlType="None"
                                TabVisibility="Collapsed" />
            </GroupBox>
        </StackPanel>
    </Grid>
</UserControl>
